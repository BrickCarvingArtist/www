@import "reset"
@import "core"
@import "header"
@import "footer"
@import "banner"
.facade
	float left
	width 100%
	overflow hidden
	.w1200
		position relative
		margin 0 auto
	.category
		position absolute
		top 0
		left 0
		width 180px
		height 480px
		background-color rgba(0, 32, 96, .75)
		z-index 1
		.section
			float left
			padding 10px 10px
			width 100%
			border-bottom 1px solid transparent
			&:hover
				background-color rgba(0, 48, 204, .4)
			.sup
				float left
				display block
				width 100%
				font-size 18px
				font-weight bold
				line-height 1.5
				color rgb(255, 255, 255)
			.sub
				margin-right 10px
				font-size 14px
				line-height 1.2
				color rgb(234, 234, 234)
.gallary
	padding-bottom 3px
	overflow hidden
	.w1200
		margin 0 auto
		h1
			text-align center
			font-size 28px
			font-weight bold
			line-height 40px
			color rgb(64, 128, 255)
		.case
			position relative
			float left
			margin-top 10px
			display block
			width 228px
			height 228px
			overflow hidden
			background-repeat no-repeat
			background-position 50% 50%
			background-size contain
			box-shadow 1px 1px 2px 1px rgb(201, 201, 201)
			&:hover
				.detail
					animation slide .25s cubic-bezier(.3, .2, .8, .2) forwards
			&:not(:nth-of-type(5n))
				margin-right 15px
			.detail
				position absolute
				top 228px
				left 0
				padding 10px
				width 100%
				height 100%
				background-color rgba(0, 0, 0, .75)
				strong
					float left
					width 100%
					text-align center
					font-size 20px
					line-height 2
					color rgb(255, 255, 255)
				p
					float left
					width 100%
					font-size 12px
					line-height 1.5
					letter-spacing 1px
					color rgb(255, 255, 255)
					text-shadow 0 0 3px rgb(64, 128, 255)
@keyframes slide
	to
		top 0