@import "reset";
@import "core";
topNavHeight = 40px
.page
	padding-top topNavHeight
.fixedNav
	position fixed
	top 0
	left @top
	height topNavHeight
	background-color rgb(234, 234, 234)
	border-bottom 1px solid rgb(201, 201, 201)
	.w1200
		margin 0 auto
		.btn
			margin 0 10px
			line-height -2+topNavHeight
			font-size 18px
			&.left
				float left
			&.right
				float right
			&:hover
				color rgb(64, 128, 255)
.home
	.w1200
		margin 0 auto
		.case
			float left
			margin-top 10px
			padding 10px
			width 100%
			overflow hidden
			border 1px solid rgb(201, 201, 201)
			box-shadow 1px 1px 2px 0 rgb(234, 234, 234)
			&:hover
				border-color rgb(64, 128, 255)
				a
					color rgb(64, 128, 255)
			img
				float left
				margin-right 10px
				width 200px
				height 100px
				border 1px solid rgb(201, 201, 201)
			h1
				float left
				width 966px
				font-size 24px
				line-height 1.5
			p
				float left
				display box
				width 966px
				overflow hidden
				box-orient vertical
				-webkit-line-clamp 3
				text-overflow ellipsis
				word-break break-all
				font-size 14px
				line-height 20px
.article
	.w1200
		margin 0 auto
		.section
			float left
			margin-top 10px
			padding 20px
			width 100%
			border 1px solid rgb(201, 201, 201)
			h1
				float left
				margin-bottom 10px
				width 100%
			h2
				margin-top 20px
				font-size inherit
				line-height 3
				strong
					font-size 20px
				em
					margin-left 10px
					font-size 14px
			p
				line-height 1.5
			strong
				color rgb(255, 0, 0)
			em
				color rgb(102, 102, 102)
			b
				color rgb(0, 128, 0)
			img
				margin 10px 0
				width 200px
				height 100px