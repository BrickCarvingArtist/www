@import "prefix";
.w1200
	width 1200px
.full
	float left
	width 100%
i
	display inline-block
	vertical-align middle
	for i in 20 30
		&.icon{i}
			width unit(i, "px")
			height @width
icon-column()
	a = arguments
	box-shadow (a[0]*2/-10) 0 0 a[1] inset,
			(a[0]*2/10) 0 0 a[1] inset,
			0 (a[0]*2/10+1) 0 a[1] inset,
			0 (a[0]*3/10+1) 0 a[2] inset,
			0 (a[0]*4/10+1) 0 0 a[1] inset,
			0 (a[0]*5/10+1) 0 a[2] inset,
			0 (a[0]*6/10+1) 0 a[1] inset,
			0 (a[0]*7/10+1) 0 a[2] inset